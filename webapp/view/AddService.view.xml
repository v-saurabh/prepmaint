<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demo.zprepmaint.controller.AddService"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>pageAddServiceTitle}" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<!--<Panel expandable="true" expanded="true" headerText="{i18n>panelServiceHeaderText}" width="auto" class="sapUiResponsiveMargin">-->
						<!--<content>-->
							<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form1"> 
								<sap.ui.layout.form:formContainers>
									<sap.ui.layout.form:FormContainer id="__container1">
										<sap.ui.layout.form:formElements>
											<sap.ui.layout.form:FormElement label="{i18n>vendorLabel}" id="vendor">
												<sap.ui.layout.form:fields>
													<Input placeholder="{i18n>placeholderVendor}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="_handleVendorValueHelp" width="100%" id="inputVendor" required="true"/>
												</sap.ui.layout.form:fields>
											</sap.ui.layout.form:FormElement>
											<sap.ui.layout.form:FormElement label="{i18n>serviceLabel}" id="service">
												<sap.ui.layout.form:fields>
													<Input placeholder="{i18n>placeholderService}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="_handleServiceValueHelp" width="100%" id="inputService" required="true"/>
												</sap.ui.layout.form:fields>
											</sap.ui.layout.form:FormElement>
											<sap.ui.layout.form:FormElement label="{i18n>matlTextLabel}" id="matltext">
												<sap.ui.layout.form:fields>
													<Input width="100%" id="inputMatlText"/>
												</sap.ui.layout.form:fields>
											</sap.ui.layout.form:FormElement>
										</sap.ui.layout.form:formElements>
									</sap.ui.layout.form:FormContainer>
								</sap.ui.layout.form:formContainers>
								<sap.ui.layout.form:layout>
									<sap.ui.layout.form:ResponsiveGridLayout id="__layout1"/>
								</sap.ui.layout.form:layout>
							</sap.ui.layout.form:Form>
						<!--</content>-->
						<Toolbar height="3rem">
							<ToolbarSpacer/>         
							<Button text="{i18n>buttonAddService}" type="Emphasized" press="onAdd"/>
							<ToolbarSpacer/>
						</Toolbar>
					<!--</Panel>					-->
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>